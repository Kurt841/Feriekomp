{
  "name": "feriekompensasjon",
  "version": "1.0.0",
  "description": "Feriekompensasjon kalkulator med FastAPI backend og Next.js frontend",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "setup": "npm run install:all",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start": "cd backend && uvicorn feriekomp.main:app --host 0.0.0.0 --port 5000",
    "test": "npm run test:backend",
    "test:backend": "cross-env PYTHONPATH=backend python -m unittest discover backend/tests",
    "test:all": "npm run test:backend",
    "test:e2e": "npm -C frontend run test:e2e",
    "test:e2e:headed": "npm -C frontend run test:e2e:headed",
    "test:e2e:ui": "npm -C frontend run test:e2e:ui",
    "scan:snyk": "snyk test",
    "scan:snyk:monitor": "snyk monitor",
    "install:all": "cd backend && python -m pip install -r requirements.txt && cd ../frontend && npm install",
    "install:backend": "cd backend && python -m pip install -r requirements.txt",
    "install:frontend": "cd frontend && npm install",
    "start:backend": "cd backend && python -m uvicorn feriekomp.main:app --reload --host 0.0.0.0 --port 5000",
    "start:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "deploy": "git push heroku HEAD:main",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "ruff check backend/",
    "format:backend": "ruff format backend/",
    "type-check:frontend": "cd frontend && npm run type-check",
    "heroku-postbuild": "npm --prefix frontend install --no-audit --no-fund && npm --prefix frontend run export",
    "pw:install": "npm -C frontend run pw:install",
    "docker:build": "docker-compose build",
    "docker:build:prod": "docker-compose -f docker-compose.prod.yml build",
    "docker:up": "docker-compose up -d",
    "docker:up:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose down",
    "docker:down:prod": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:prod": "docker-compose -f docker-compose.prod.yml logs -f",
    "docker:restart": "docker-compose restart",
    "docker:restart:prod": "docker-compose -f docker-compose.prod.yml restart",
    "docker:clean": "docker-compose down -v",
    "docker:clean:prod": "docker-compose -f docker-compose.prod.yml down -v"
  },
  "workspaces": [
    "frontend"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/26zl/feriekomp"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3"
  }
}
