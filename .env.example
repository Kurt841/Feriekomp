# For produksjon: Sett ENV=production (styrer app-oppførsel, ikke servervalg)
# MERK: Servervalg (Gunicorn vs uvicorn) styres av oppstartskommando (Procfile/Dockerfile)
ENV=development
PORT=5000
# For produksjon: Sett til ditt offentlige frontend-domene (f.eks. https://feriekomp.example.com)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
# For produksjon: Sett AUTO_CREATE_DB=false (ikke auto-opprett database i produksjon)
AUTO_CREATE_DB=true

# Database-konfigurasjon
# For produksjon: Sett til din Neon produksjon-tilkoblingsstreng
# Eksempel: postgresql://user:password@ep-xxx-xxx.region.neon.tech/dbname?sslmode=require&channel_binding=require
DATABASE_URL=
# For utvikling: Sett til din Neon utvikling-tilkoblingsstreng (eller la stå tom for å bruke SQLite)
# Eksempel: postgresql://user:password@ep-xxx-xxx.region.neon.tech/dbname?sslmode=require&channel_binding=require
DEV_DATABASE_URL=

# Frontend-konfigurasjon
# For produksjon: Sett til ditt offentlige backend-URL (f.eks. https://api.feriekomp.example.com eller /api hvis bak samme domene)
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000
NEXT_PUBLIC_ENABLE_AI_EXPLANATION=false
# For produksjon: Sett NODE_ENV=production
NODE_ENV=development
# For produksjon: Sett til backend-service navn (f.eks. "backend" i Docker) eller backend-domene
API_HOST=localhost
API_PORT=5000
FRONTEND_PORT=3000

# AI-konfigurasjon (valgfritt)
ENABLE_AI=false
# OpenAI (valgfritt)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=
# Ollama (valgfritt)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
# OpenRouter (valgfritt)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-4o-mini
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
AI_TIMEOUT=30

# Rate Limiting
# I minne (per-prosess): Hver Gunicorn worker har egen rate-limit-teller
# For produksjon med flere Gunicorn workers: Bruk Redis for delt rate limiting
# Eksempel: RATE_LIMIT_STORAGE_URI=redis://redis:6379
RATE_LIMIT_STORAGE_URI=memory://

# Sikkerhet (for produksjon bak reverse proxy)
# TRUST_PROXY: Tillat at applikasjonen stoler på X-Forwarded-* headers fra Nginx
# FORCE_HTTPS: Tving HTTPS-headers (hvis Nginx håndterer TLS-terminering)
# MERK: I produksjon bak Nginx MÅ TRUST_PROXY=true settes for korrekt IP-logging og HTTPS-deteksjon
TRUST_PROXY=false
FORCE_HTTPS=false

# Gunicorn-konfigurasjon (kun produksjon)
WEB_CONCURRENCY=2
GUNICORN_TIMEOUT=60
GUNICORN_KEEPALIVE=5
GUNICORN_LOG_LEVEL=info
